

<div class="squishy-button" @onclick="@_onclick">
	<img class="squishy"  src="@Source" alt="@Alt" height="@Size"/>
</div>

@code {

	[Parameter]
	public EventCallback OnClick { get; set; }

	[Parameter]
	public string Source { get; set; }

	[Parameter]
	public string Alt { get; set; } = "";

	[Parameter]
	public int Size { get; set; }

	private void _onclick()
	{
		OnClick.InvokeAsync();
	}
}
